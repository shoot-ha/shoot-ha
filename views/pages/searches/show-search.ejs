<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results Search</title>
    <link rel="shortcut icon" href="https://www.flaticon.com/premium-icon/icons/svg/2706/2706805.svg" />
   
    
    <link rel="stylesheet" href="/public/styles/theme.css">

</head>

<body>
    <header>
        <%- include ('../../layout/header') %>   
     </header>
    <main>
        <% teamSearch.forEach(result => { %>

            <section id="section">
                <img id="badge" src="<%= result.badge%>">
                <img id="logo" src="<%= result.logo %>">
                <p id="info"><%= result.team %></p>
                <p id="info"><%= result.formed%></p>
                <p id="info"><%= result.sport%></p>
                <p id="info"><%= result.league %></p>
                <p id="info"><%= result.stadium%></p>
                <img id="staImg" src="<%= result.stadiumImg%>">
                <p id="info"><%= result.stadiumLocation%></p>
                <a id="website" href="http://<%=result.website%>" target="_blank"> <%= result.team %> Website </a>
                <p id="description"><%= result.teamDescription%></p>
                <img id="clothes"src="<%= result.clothes%>">
            
            



            <!------------------------------- form section ------------------------>
            <form action="/favourite" method="POST" id="team-form" class="form-container">
                <input type="text" name="team" value="<%= result.team%>" style="display: none;" />
                <input type="text" name="formed" value="<%= result.formed%>" style="display: none;" />
                <input type="text" name="sport" value="<%= result.sport%>" style="display: none;" />
                <input type="text" name="league" value="<%= result.league %>" style="display: none;" />
                <input type="text" name="staduim" value="<%= result.staduim%>" style="display: none;"/>
                <input type="text" name="staduimImg" value="<%= result.staduimImg%>" style="display: none;" />
                <input type="text" name="staduimLocation" value="<%= result.staduimLocation%>" style="display: none;" />
                <input type="text" name="website" value="<%= result.website%>" style="display: none;" />
                <input type="text" name="teamDescription" value="<%= result.teamDescription%>" style="display: none;" />
                <input type="text" name="badge" value="<%= result.badge%>" style="display: none;" />
                <input type="text" name="logo" value="<%= result.logo%>" style="display: none;" />
                <input type="text" name="clothes" value="<%= result.clothes%>" style="display: none;" />
                <button type="submit"> Add To Favourite </button>
        </section>
        </form>


        <% }) %>

    </main>
    <footer>
        <%- include ('../../layout/footer') %>
    </footer>
</body>

</html>