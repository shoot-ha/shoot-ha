<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../layout/head') %>
</head>

<body>
    <header>
    <%- include ('../layout/header') %>
    </header>
    <main>
        <img src="https://images.unsplash.com/photo-1518905332052-b6cfda20ee45?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=697&q=80">
        <div>
            <p class="main-description">The site provides you with league tables, video highlights, goal scorers, and other football information.</p>
        </div>


        <!-- slide-show -->
        <ul id="slides">
            <li class="slide showing">
            </li>
            <li class="slide"></li>
            <li class="slide"> </li>
            <li class="slide"></li>
            <li class="slide"> </li>
        </ul>

        <% teamRender.forEach(result => { %>
        <section id="section">
            <img id="rendImg" src="<%- result.thumbnail %>">
            <p class="from-render"><%- result.title %></p>
        </section>
        <% }) %>
    </main>

    <footer>
        <%- include ('../layout/footer') %>

    </footer>
</body>

<script>
    function myFunction() {
        var x = document.getElementById('myLinks');
        if (x.style.display === 'block') {
            x.style.display = 'none';
        } else {
            x.style.display = 'block';
        }
    }
    // for slide-show

    var slides = document.querySelectorAll('#slides .slide');
    var currentSlide = 0;
    var slideInterval = setInterval(nextSlide, 4000);
    function nextSlide() {
        slides[currentSlide].className = 'slide';
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].className = 'slide showing';
    }


</script>

</html>